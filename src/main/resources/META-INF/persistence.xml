<?xml version="1.0" encoding="UTF-8" ?>
<!--Identifica un archivo de persistencia-->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">


    <!--Nombre de gestor a JPA-->
    <persistence-unit name="miPersistencia">
        <!--Representar las clases-->

        <class>com.hibernate.Model.Employee</class>
        <class>com.hibernate.Model.Author</class>
        <class>com.hibernate.Model.Book</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:h2:~/test/BDprueba"/>-->
           <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/Desktop/BDprueba"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <!-- <property name="hibernate.show_sql" value="true"/> -->
            <!--<property name="hibernate.generate_statistics" value="false"/>-->
            <!--Tipo de dialecto SQL-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        </properties>
    </persistence-unit>
</persistence>